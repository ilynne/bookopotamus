!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Bookopotamus"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = javascript_include_tag "application"


  %body
    .navbar.navbar-fluid-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="#") Bookopotamus
          .container.nav-collapse
            %ul.nav
              %li= link_to 'Books', books_path
              %li= link_to 'Add a book', new_book_path if current_user
              %li= link_to 'Users', users_path if current_user.try(:admin?)
            %ul.nav.pull-right
              %li.nav
                = link_to "#{current_user.email}#{current_user_admin(current_user)}", '#' if current_user
              %li.nav= link_to 'Log In', new_user_session_path unless current_user
              %li.nav= link_to 'Logout', destroy_user_session_path, method: :delete if current_user

    .container-fluid

      .row-fluid
        .span3
          .well.sidebar-nav
            %ul.nav.nav-list
              %li.nav-header Sidebar
              %li= link_to 'Add a book', new_book_path if current_user
          - if current_user.try(:admin?)
            .well.sidebar.nav
              = render 'users/form'
            .well.sidebar.nav
              = render 'shared/impersonate_links'
          - if current_user && current_user != true_user
            .well.sidebar.nav
              = render 'shared/true_user_links'
          - if current_user
            .well.sidebar.nav
              %p invite user form
        .span9
          = bootstrap_flash
          .row-fluid
            .span-9
              #search_box.pull-right
                = render 'shared/search_form'
          = yield
    
      %footer
        %p &copy; Company 2014
