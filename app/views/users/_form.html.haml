= form_for User.new, url: users_admin_path do |f|
  %fieldset
    .nav-header Add user
    .field
      = f.label :email
      = f.email_field :email   
    .field
      = f.label :password
      = f.password_field :password
    .field
      = f.label :password_confirmation
      = f.password_field :password_confirmation
    .field
      = f.label :admin
      = f.check_box :admin
    
  .actions
    = f.submit 'Add'
